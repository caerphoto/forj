<div id="forj_main">
<h2>Sign up</h2>
<p>This is all you need to fill in :</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %>: <%= f.text_field :name %><br />
  This is the name that will appear on your posts.

  <p><%= f.label :email %>: <%= f.text_field :email %><br />
  This will be your identifier when signing in.</p>

  <p><%= f.label :password %>: <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %>: <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign me up!" %></p>
<% end %>

<!--<%= render :partial => "devise/shared/links" %>-->
</div>
  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag "jquery-ui-min.js" %>
  <%= javascript_include_tag "signupin.js" %>
